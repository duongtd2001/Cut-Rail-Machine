<UserControl x:Class="CUT_RAIL_MACHINE.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CUT_RAIL_MACHINE.Views"
             xmlns:focus="clr-namespace:CUT_RAIL_MACHINE.Helpers"
             xmlns:conv="clr-namespace:CUT_RAIL_MACHINE.Services"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">
    <UserControl.Resources>
        <conv:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" />
    </UserControl.Resources>
    <Border BorderThickness="2,2,1,2" Background="#200F53">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Border  BorderThickness="0,0,0,2">
                <Border.BorderBrush>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="{StaticResource winBoderColor1}" Offset="0"/>
                        <GradientStop Color="{StaticResource winBoderColor2}" Offset="0.5"/>
                        <GradientStop Color="{StaticResource winBoderColor3}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>
                <StackPanel Grid.Row="0">
                    <Label Content="RAIL CUTTING MACHINE" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
                </StackPanel>
            </Border>
            <Border Grid.Row="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="300" MaxWidth="500"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Border BorderThickness="1" Margin="20">
                            <Border.BorderBrush>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="{StaticResource winBoderColor1}" Offset="0"/>
                                    <GradientStop Color="{StaticResource winBoderColor2}" Offset="0.5"/>
                                    <GradientStop Color="{StaticResource winBoderColor3}" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.BorderBrush>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0" BorderThickness="0,0,0,2" Margin="20,0,20,0">
                                    <Border.BorderBrush>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="{StaticResource winBoderColor1}" Offset="0"/>
                                            <GradientStop Color="{StaticResource winBoderColor2}" Offset="0.5"/>
                                            <GradientStop Color="{StaticResource winBoderColor3}" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.BorderBrush>
                                    <TextBlock Text="EMPLOYEE AND PO INFORMATION" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
                                </Border>
                                <Border Grid.Row="1" Margin="0,20,0,20">
                                    <UniformGrid Rows="9" HorizontalAlignment="Stretch">
                                        <TextBlock Text="ID" Foreground="Yellow" Margin="20,0,20,0"/>
                                        <TextBox x:Name="txtUser" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" focus:AutoFocusHelper.IsFocused="{Binding IsIDFocused}"  FontSize="15" FontWeight="Medium" FontFamily="Montserrat" Foreground="Yellow"
                                                 CaretBrush="LightGray" BorderBrush="Yellow" BorderThickness="0,0,0,2" Height="28" VerticalContentAlignment="Center" Margin="20,0,20,0" Padding="20,0,0,0">
                                            <TextBox.Background>
                                                <ImageBrush  Stretch="None" AlignmentX="Left"/>
                                            </TextBox.Background>
                                        </TextBox>
                                        <!--helpers:AutoFocusHelper.IsFocused="{Binding IsPOFocused}"-->
                                        <TextBlock/>
                                        <TextBlock Text="NAME" Foreground="Aqua" Margin="20,0,20,0"/>
                                        <TextBox Text="{Binding FullName}" Foreground="Aqua" Margin="20,0,20,0" CaretBrush="LightGray" BorderBrush="Aqua" BorderThickness="0,0,0,2" FontSize="15"
                                                FontWeight="Medium" FontFamily="Montserrat" VerticalContentAlignment="Center" Padding="20,0,0,0" IsReadOnly="True">
                                            <TextBox.Background>
                                                <ImageBrush Stretch="None" AlignmentX="Left"/>
                                            </TextBox.Background>
                                        </TextBox>
                                        <TextBlock/>
                                        <TextBlock Text="PO" Foreground="DeepPink" Margin="20,0,20,0"/>
                                        <TextBox x:Name="txtPO" Text="{Binding PO, UpdateSourceTrigger=PropertyChanged}" focus:AutoFocusHelper.IsFocused="{Binding IsPOFocused}" Foreground="DeepPink" Margin="20,0,20,0" CaretBrush="LightGray"  BorderBrush="DeepPink"  BorderThickness="0,0,0,2" FontSize="15"
                                                FontWeight="Medium" FontFamily="Montserrat"  VerticalContentAlignment="Center"  Padding="20,0,0,0" >
                                            <TextBox.Background>
                                                <ImageBrush Stretch="None" AlignmentX="Left"/>
                                            </TextBox.Background>
                                        </TextBox>
                                        <TextBlock Text="{Binding ErrorMessage}" Foreground="#D7596D" FontSize="12" FontWeight="Medium" FontFamily="Montserrat" Margin="0,10,0,0" TextWrapping="Wrap"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </UniformGrid>
                                </Border>
                            </Grid>
                        </Border>
                    </Grid>
                    <Border Grid.Column="1" Margin="0,20,20,20" BorderThickness="1" Visibility="{Binding IsViewLocker}">
                        <Border.BorderBrush>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="{StaticResource winBoderColor1}" Offset="0"/>
                                <GradientStop Color="{StaticResource winBoderColor2}" Offset="0.5"/>
                                <GradientStop Color="{StaticResource winBoderColor3}" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="2" BorderThickness="0,0,0,2" Margin="20,0,20,0">
                                <Border.BorderBrush>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="{StaticResource winBoderColor1}" Offset="0"/>
                                        <GradientStop Color="{StaticResource winBoderColor2}" Offset="0.5"/>
                                        <GradientStop Color="{StaticResource winBoderColor3}" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.BorderBrush>
                            </Border>
                            <Border Grid.Row="0" BorderThickness="0,0,0,2" Margin="20,0,20,0">
                                <Border.BorderBrush>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="{StaticResource winBoderColor1}" Offset="0"/>
                                        <GradientStop Color="{StaticResource winBoderColor2}" Offset="0.5"/>
                                        <GradientStop Color="{StaticResource winBoderColor3}" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.BorderBrush>
                                <TextBlock Text="PLC AND DATA" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
                            </Border>
                            <Border Grid.Row="1" Margin="20">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto" MinWidth="{Binding MinWidthColums}"/>
                                        <ColumnDefinition Width="auto" MinWidth="{Binding MinWidthColums}"/>
                                        <ColumnDefinition Width="auto" MinWidth="{Binding MinWidthColums}"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0" Margin="0,0,10,0">
                                        <StackPanel VerticalAlignment="Top">
                                            <TextBlock Margin="0,0,0,10" Text="RULER VALUE (mm)" Foreground="Yellow" Height="25" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="0,4,0,0"/>
                                            <TextBox Foreground="Yellow" CaretBrush="LightGray"  BorderBrush="Yellow"  BorderThickness="0,0,0,2" FontSize="18"
                                                    FontWeight="Medium" FontFamily="Montserrat"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Height="30">

                                                <TextBox.Background>
                                                    <ImageBrush Stretch="None" AlignmentX="Left"/>
                                                </TextBox.Background>
                                            </TextBox>
                                            <Button Content="RESET RULER" Style="{StaticResource GradientBorderButton2}" Background="Transparent" Foreground="White"
                                                    Margin="0,20,0,0" Height="50">

                                            </Button>
                                        </StackPanel>
                                    </Border>
                                    <Border Grid.Column="1" Margin="10,0,10,0">
                                        <StackPanel VerticalAlignment="Top">
                                            <TextBlock Text="RESOLUTION (mm)" Foreground="White" HorizontalAlignment="Center" Padding="0,4,0,0" Margin="0,0,0,10" Height="25"/>
                                            <TextBox Foreground="White" CaretBrush="LightGray"  BorderBrush="White"  BorderThickness="0,0,0,2" FontSize="18"
                                                        FontWeight="Medium" FontFamily="Montserrat"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Height="30">

                                                <TextBox.Background>
                                                    <ImageBrush Stretch="None" AlignmentX="Left"/>
                                                </TextBox.Background>
                                            </TextBox>
                                            <Button Content="SET RESOLUTION" Style="{StaticResource GradientBorderButton3}" Background="Transparent" Foreground="White"
                                                    Margin="0,20,0,0" Height="50">

                                            </Button>
                                        </StackPanel>
                                    </Border>
                                    <Border Grid.Column="2" Margin="10,0,10,0">
                                        <StackPanel VerticalAlignment="Top">
                                            <TextBlock Text="TYPE" Foreground="White" HorizontalAlignment="Center" Padding="0,4,0,0" Margin="0,0,0,10" Height="25"/>
                                            <TextBox Foreground="White" CaretBrush="LightGray"  BorderBrush="White"  BorderThickness="0,0,0,2" FontSize="18"
                                                    FontWeight="Medium" FontFamily="Montserrat"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Height="30">

                                                <TextBox.Background>
                                                    <ImageBrush Stretch="None" AlignmentX="Left"/>
                                                </TextBox.Background>
                                            </TextBox>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </Border>
                            <Border Grid.Row="4" Margin="20,10,10,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto" MinWidth="{Binding MinWidthColums}"/>
                                        <ColumnDefinition Width="auto" MinWidth="{Binding MinWidthColums}"/>
                                        <ColumnDefinition Width="auto" MinWidth="{Binding MinWidthColums}"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0" Margin="0,0,10,0">
                                        <StackPanel>
                                            <TextBlock Text="CUTTING LENGHT (mm)" Foreground="Orange" HorizontalAlignment="Center" Padding="0,4,0,0" Margin="0,0,0,10" Height="25"/>
                                            <TextBox Foreground="Orange" CaretBrush="LightGray"  BorderBrush="Orange"  BorderThickness="0,0,0,2" FontSize="18"
                                                     FontWeight="Medium" FontFamily="Montserrat"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Height="30">

                                                <TextBox.Background>
                                                    <ImageBrush Stretch="None" AlignmentX="Left"/>
                                                </TextBox.Background>
                                            </TextBox>
                                        </StackPanel>
                                    </Border>
                                    <Border Grid.Column="1" Margin="10,0,10,0">
                                        <StackPanel VerticalAlignment="Top">
                                            <TextBlock Text="CHANGE LENGHT (mm)" Foreground="DeepPink" HorizontalAlignment="Center" Padding="0,4,0,0" Margin="0,0,0,10" Height="25"/>
                                            <TextBox Foreground="DeepPink" CaretBrush="LightGray"  BorderBrush="DeepPink"  BorderThickness="0,0,0,2" FontSize="18"
                                                     FontWeight="Medium" FontFamily="Montserrat"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Height="30">

                                                <TextBox.Background>
                                                    <ImageBrush Stretch="None" AlignmentX="Left"/>
                                                </TextBox.Background>
                                            </TextBox>
                                            <UniformGrid Columns="2">
                                                <Button Style="{StaticResource GradientBorderButton4}" Background="Transparent" Foreground="White"
                                                        Margin="0,20,10,0" Height="50">
                                                    <StackPanel>
                                                        <TextBlock Text="-" FontSize="20" FontWeight="Medium" Foreground="DeepPink"/>
                                                    </StackPanel>
                                                </Button>
                                                <Button Style="{StaticResource GradientBorderButton4}" Background="Transparent" Foreground="White"
                                                        Margin="10,20,0,0" Height="50">
                                                    <StackPanel>
                                                        <TextBlock Text="+" FontSize="20" FontWeight="Medium" Foreground="DeepPink"/>
                                                    </StackPanel>
                                                </Button>
                                            </UniformGrid>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>
                    <Border x:Name="OverlayGrid" Background="#80FFFFFF" Grid.Column="2"  Visibility="{Binding IsUnlocked, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock x:Name="BlinkingText" Text="🔒 LOCKER, please enter ID and PO to use." VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30" Foreground="Yellow" FontWeight="Bold" />
                            <TextBlock Text="🔒 LOCKER, Please contact OST - PE for support." VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15" Foreground="Yellow" FontWeight="Bold"  Margin="0,20,0,0"/>
                        </StackPanel>
                        <Border.Triggers>
                            <EventTrigger RoutedEvent="Grid.Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                        <DoubleAnimation Storyboard.TargetName="OverlayGrid" Storyboard.TargetProperty="Opacity" From="0.3" To="1" Duration="0:0:1.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Border.Triggers>
                    </Border>
                </Grid>
            </Border>
            <Border Grid.Row="2" BorderThickness="0,2,0,0">
                <Border.BorderBrush>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="{StaticResource winBoderColor1}" Offset="0"/>
                        <GradientStop Color="{StaticResource winBoderColor2}" Offset="0.5"/>
                        <GradientStop Color="{StaticResource winBoderColor3}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>
                <Grid VerticalAlignment="Bottom">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <DockPanel LastChildFill="True" Grid.Row="0">
                        <RadioButton Style="{StaticResource menuButton2}" Tag="{StaticResource color1}" IsChecked="True" Command="{Binding ShowResultsLog}">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="LOG" Style="{StaticResource menuButtonText}" Margin="30,0,0,0"/>
                            </StackPanel>

                        </RadioButton>
                        <StackPanel VerticalAlignment="Center">
                            <CheckBox x:Name="Expand_CKB" IsChecked="{Binding IsExpand}" VerticalAlignment="Center" Margin="20,0,0,0" Content="EXPAND" Foreground="White" FontWeight="Medium" >

                            </CheckBox>
                        </StackPanel>
                    </DockPanel>
                    <DockPanel Grid.Row="1">
                        <Border Grid.Row="3">
                            <StackPanel>
                                <TextBox x:Name="ResultTextBox" Height="{Binding ExpandResult}" Text="{Binding aResults, UpdateSourceTrigger=PropertyChanged}"
                                        AcceptsReturn="True" VerticalScrollBarVisibility="Auto" IsReadOnly="True"
                                        Style="{StaticResource CustomTextBoxStyle}"
                                        FontSize="10"/>
                            </StackPanel>
                        </Border>
                    </DockPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
